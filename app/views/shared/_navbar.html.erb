<!-- HEADER -->
<header>
  <script>
  // highlights nav
  $( document ).on('turbolinks:load', function() {
      $(".navbar-nav li").each( function () {
        if (window.location.pathname == $(this).find(".nav-link").attr("href")){
          $(this).addClass('active').find(".nav-link").find("span").remove();
          $(this).addClass('active').find(".nav-link").append(" <span class='sr-only'>(current)></span>");
        }
      });
  });
  </script>
<nav class="navbar navbar-default visible-xs">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#thenavbar" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="thenavbar">

    
      <%= form_tag("/courses", method: "get", class: 'navbar-form navbar-left ', role: 'form') do %>
        <div class="form-group">
           <%= text_field_tag(:q, params[:q], class:"form-control", id: "navq") %>
        </div>
        <button class="btn btn-lil" type="submit" title="Search"><i class="glyphicon glyphicon-search"></i> Search for courses</button>
       
    
      <% end %>

      <ul class="nav navbar-nav">
        <li><a href="/" class= "nav-link">Leeds Adult Learning Home</a></li>
      </ul>
      
      <ul class="nav navbar-nav">
        <li><%= link_to("All courses",  courses_path, class: "nav-link") %></li>
        <% cache "topicnav" do %>
          <% for topic in @topics %>
            <li>
             <%= link_to(topic.name,  topic, class: "nav-link") %>            
            </li>

          <% end %>
        <% end %>
      </ul>
      <!-- 
      <p class="navbar-text">Other:</p>
      <ul class="nav navbar-nav">
        <li> <%= link_to "About", about_path, class: "nav-link" %></li>
        <li><%= link_to "Privacy / Data", privacy_path,  class: "nav-link" %></li>
        <li><a href="https://employmentskillsleeds.co.uk/contact">Contact</a></li>
      </ul>
      -->




    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
</header>