<% content_for :title, "News & Events" %>

<div class="container">

  <h1>News & Events</h1>

  <% @news.each do | news_item | %>
  <div class="row news-result">
    <div class="col-md-12">
      <h2><%=link_to news_item.title, news_item%></h2>
      <img src="<%= news_item.thumbnail %>" alt="<%= news_item.alt_text %>" > <br />
      <div class="news_item-excerpt">
        <%= sanitizemarkdown(Kramdown::Document.new(news_item.excerpt).to_html)%>
        <p><%=link_to "Read more about "+news_item.title, news_item, class: ""%></p>
      </div>
    </div>
  </div>
  <br />
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <%= will_paginate @news %>
    </div>
  </div>
</div>